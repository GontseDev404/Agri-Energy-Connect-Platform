@model ST10038937_prog7311_poe1.Models.Product

@{
    ViewData["Title"] = Localizer["Create Product"];
}

<div class="aec-container aec-mt-2">
    <div class="aec-col-6 aec-mx-auto">
        <div class="aec-card">
            <h1 class="aec-mb-2" data-translate-key="Create Product">Create Product</h1>
            <h4 class="aec-mb-2" data-translate-key="Product">Product</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group aec-mb-2">
                    <label asp-for="Name" class="control-label" data-translate-key="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group aec-mb-2">
                    <label asp-for="Category" class="control-label" data-translate-key="Category">Category</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group aec-mb-2">
                    <label asp-for="ProductionDate" class="control-label" data-translate-key="ProductionDate">Production Date</label>
                    <input asp-for="ProductionDate" class="form-control" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
                <div class="form-group aec-mb-2">
                    <label asp-for="Price" class="control-label" data-translate-key="Price">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group aec-mb-2">
                    <label asp-for="QuantityAvailable" class="control-label" data-translate-key="QuantityAvailable">Quantity Available</label>
                    <input asp-for="QuantityAvailable" class="form-control" />
                    <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
                </div>
                <div class="form-group aec-mb-2">
                    <input type="submit" value="@Localizer["Create"]" class="aec-btn" />
                </div>
            </form>
        </div>
    </div>
</div> 
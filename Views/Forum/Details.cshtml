@model ST10038937_prog7311_poe1.Models.ForumPost

@{
    ViewData["Title"] = Localizer["Forum Post Details"];
}

<div class="aec-container aec-mt-2">
    <div class="aec-col-8 aec-mx-auto">
        <div class="aec-card">
            <h1 class="aec-mb-2" data-translate-key="Forum Post Details">Forum Post Details</h1>
            <h4 class="aec-mb-2" data-translate-key="Forum Post">Forum Post</h4>
            <hr />
            <dl>
                <dt data-translate-key="Title">Title</dt>
                <dd>@Html.DisplayFor(model => model.Title)</dd>
                <dt data-translate-key="Content">Content</dt>
                <dd>@Html.DisplayFor(model => model.Content)</dd>
                <dt data-translate-key="Posted by">Posted by</dt>
                <dd>@(Model.User?.UserName ?? "Anonymous")</dd>
                <dt data-translate-key="Posted on">Posted on</dt>
                <dd>@Html.DisplayFor(model => model.CreatedAt)</dd>
            </dl>
            @if (Model.Replies != null && Model.Replies.Any())
            {
                <h3 class="aec-mt-2" data-translate-key="Replies">Replies</h3>
                <div class="aec-card aec-mb-2">
                    @foreach (var reply in Model.Replies.OrderBy(r => r.CreatedAt))
                    {
                        <div class="aec-mb-2">
                            <div>
                                <strong>@(reply.User?.UserName ?? "Anonymous")</strong>
                                <small class="text-muted">@reply.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                            </div>
                            <div class="aec-mt-1">
                                @reply.Content
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div> 
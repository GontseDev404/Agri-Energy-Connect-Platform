@model ST10038937_prog7311_poe1.Models.Farmer

@{
    ViewData["Title"] = Localizer["Delete Farmer"];
}

<div class="aec-container aec-mt-2">
    <div class="aec-col-6 aec-mx-auto">
        <div class="aec-card">
            <h1 class="aec-mb-2" data-translate-key="Delete Farmer">Delete Farmer</h1>
            <h4 class="aec-mb-2" data-translate-key="Are you sure you want to delete this farmer?">Are you sure you want to delete this farmer?</h4>
            <hr />
            <dl>
                <dt data-translate-key="Name">Name</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>
                <dt data-translate-key="Farm Name">Farm Name</dt>
                <dd>@Html.DisplayFor(model => model.FarmName)</dd>
                <dt data-translate-key="Email">Email</dt>
                <dd>@Html.DisplayFor(model => model.Email)</dd>
                <dt data-translate-key="Phone">Phone</dt>
                <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="FarmerId" />
                <div class="aec-mt-2">
                    <input type="submit" value="@Localizer["Delete"]" class="aec-btn aec-mr-2" />
                    <a asp-action="Index" class="aec-btn">@Localizer["Back to List"]</a>
                </div>
            </form>
        </div>
    </div>
</div> 
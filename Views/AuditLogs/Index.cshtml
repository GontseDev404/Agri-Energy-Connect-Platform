@model IEnumerable<ST10038937_prog7311_poe1.Models.AuditLog>

@{
    ViewData["Title"] = Localizer["Audit Logs"];
}

<div class="aec-container aec-mt-2">
    <div class="aec-col-12">
        <h1 class="aec-mb-2" data-translate-key="Audit Logs">Audit Logs</h1>
        <form asp-action="Index" method="get">
            <input type="text" name="searchString" class="aec-card aec-mb-2" placeholder="@Localizer["Search audit logs..."]" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="aec-btn" data-translate-key="Search">Search</button>
        </form>
    </div>
    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
    {
        <div class="aec-col-12">
            <div class="aec-card aec-mb-2">
                <span data-translate-key="Showing results for">Showing results for:</span> "@ViewData["CurrentFilter"]"
                <a asp-action="Index" class="aec-btn aec-mt-2" data-translate-key="Clear">Clear</a>
            </div>
        </div>
    }
    @if (Model.Any())
    {
        <div class="aec-col-12">
            <div class="aec-card aec-mb-2">
                <table class="aec-table">
                    <thead>
                        <tr>
                            <th data-translate-key="Timestamp">Timestamp</th>
                            <th data-translate-key="User">User</th>
                            <th data-translate-key="Action">Action</th>
                            <th data-translate-key="Details">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@item.UserId</td>
                                <td>@item.Action</td>
                                <td>@item.Details</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="aec-col-12">
            <div class="aec-card aec-mb-2">
                <span data-translate-key="No audit logs found.">No audit logs found.</span>
            </div>
        </div>
    }
</div> 
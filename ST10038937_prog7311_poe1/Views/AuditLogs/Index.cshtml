@model IEnumerable<ST10038937_prog7311_poe1.Models.AuditLog>

@{
    ViewData["Title"] = Localizer["Audit Logs"];
}

<h1 data-translate-key="Audit Logs">Audit Logs</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" class="form-control me-2" placeholder="@Localizer["Search audit logs..."]" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary" data-translate-key="Search">Search</button>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
{
    <div class="alert alert-info">
        <span data-translate-key="Showing results for">Showing results for:</span> "@ViewData["CurrentFilter"]"
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2" data-translate-key="Clear">Clear</a>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th data-translate-key="Timestamp">Timestamp</th>
                    <th data-translate-key="User">User</th>
                    <th data-translate-key="Action">Action</th>
                    <th data-translate-key="Details">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@item.UserId</td>
                        <td>@item.Action</td>
                        <td>@item.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <span data-translate-key="No audit logs found.">No audit logs found.</span>
    </div>
}

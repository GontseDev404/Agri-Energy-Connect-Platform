@model ST10038937_prog7311_poe1.Models.Product
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["DeleteProductTitle"];
}

<div class="container main-container">
    <h1 class="display-4 mb-4" data-translate-key="DeleteProductTitle">@Localizer["DeleteProductTitle"]</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading" data-translate-key="Warning">@Localizer["Warning"]</h4>
        <p class="mb-0" data-translate-key="DeleteProductWarning">@Localizer["DeleteProductWarning"]</p>
    </div>

    <section class="card shadow mb-4" aria-labelledby="delete-confirm-heading">
        <div class="card-header">
            <h2 id="delete-confirm-heading" class="h5 mb-0 text-white" data-translate-key="ConfirmDeletion">@Localizer["ConfirmDeletion"]: @Model.Name</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold" data-translate-key="ProductName">@Localizer["ProductName"]</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold" data-translate-key="Category">@Localizer["Category"]</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-3 fw-bold" data-translate-key="ProductionDate">@Localizer["ProductionDate"]</dt>
                <dd class="col-sm-9">@Model.ProductionDate.ToLongDateString()</dd>

                <dt class="col-sm-3 fw-bold" data-translate-key="Price">@Localizer["Price"]</dt>
                <dd class="col-sm-9">R @Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3 fw-bold" data-translate-key="QuantityAvailable">@Localizer["QuantityAvailable"]</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.QuantityAvailable) @Localizer["Units"]</dd>

                <dt class="col-sm-3 fw-bold" data-translate-key="Description">@Localizer["Description"]</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary" aria-label="@Localizer["CancelAndReturn"]">@Localizer["Cancel"]</a>
                    <button type="submit" class="btn btn-danger" aria-label="@Localizer["ConfirmPermanentDeletion"]">@Localizer["DeletePermanently"]</button>
                </div>
            </form>
        </div>
    </section>
</div>

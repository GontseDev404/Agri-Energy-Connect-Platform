@model IEnumerable<ST10038937_prog7311_poe1.Models.ForumPost>

@{
    ViewData["Title"] = Localizer["Forum"];
}

<h1 data-translate-key="Forum">Forum</h1>

<p>
    <a asp-action="Create" data-translate-key="Create Forum Post">Create Forum Post</a>
</p>

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" class="form-control me-2" placeholder="@Localizer["Search forum posts..."]" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary" data-translate-key="Search">Search</button>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
{
    <div class="alert alert-info">
        <span data-translate-key="Showing results for">Showing results for:</span> "@ViewData["CurrentFilter"]"
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2" data-translate-key="Clear">Clear</a>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </h5>
                        <p class="card-text text-muted">
                            <small>
                                <span data-translate-key="Posted by">Posted by:</span> @(item.User?.UserName ?? "Anonymous") |
                                <span data-translate-key="Posted on">Posted on:</span> @item.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </p>
                        <p class="card-text">
                            @{
                                var content = item.Content;
                                if (content.Length > 150)
                                {
                                    content = content.Substring(0, 150) + "...";
                                }
                            }
                            @content
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <span data-translate-key="Replies">Replies:</span> @(item.Replies?.Count ?? 0)
                            </small>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" data-translate-key="View">View</a>
                                @if (User.IsInRole("Admin") || User.Identity?.Name == item.User?.UserName)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" data-translate-key="Edit">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" data-translate-key="Delete">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <span data-translate-key="No forum posts found.">No forum posts found.</span>
    </div>
}

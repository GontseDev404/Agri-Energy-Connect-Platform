@model ST10038937_prog7311_poe1.Models.PostReply

@{
    ViewData["Title"] = Localizer["Delete Reply"];
}

<h1 class="aec-title aec-text-danger" data-translate-key="Delete Reply">Delete Reply</h1>

<div class="aec-card aec-mb-4">
    <div class="aec-card-body">
        <h2 class="aec-card-subtitle" data-translate-key="Are you sure you want to delete this reply?">Are you sure you want to delete this reply?</h2>
        <div class="aec-details-list">
            <div class="aec-details-row">
                <span class="aec-details-label" data-translate-key="Content">Content</span>
                <span class="aec-details-value">@Html.DisplayFor(model => model.Content)</span>
            </div>
            <div class="aec-details-row">
                <span class="aec-details-label" data-translate-key="Posted by">Posted by</span>
                <span class="aec-details-value">@(Model.User?.UserName ?? "Anonymous")</span>
            </div>
            <div class="aec-details-row">
                <span class="aec-details-label" data-translate-key="Posted on">Posted on</span>
                <span class="aec-details-value">@Html.DisplayFor(model => model.CreatedAt)</span>
            </div>
        </div>
        <form asp-action="DeleteReply" class="aec-form aec-mt-3" aria-label="Delete Reply">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="aec-btn aec-btn-danger"><i class="fa fa-trash"></i> @Localizer["Delete"]</button>
            <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumPostId" class="aec-btn aec-btn-outline-secondary" data-translate-key="Back to Post"><i class="fa fa-arrow-left"></i> Back to Post</a>
        </form>
    </div>
</div>

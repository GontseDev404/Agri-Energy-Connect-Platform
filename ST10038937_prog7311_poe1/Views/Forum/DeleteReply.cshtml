@model ST10038937_prog7311_poe1.Models.PostReply

@{
    ViewData["Title"] = Localizer["Delete Reply"];
}

<h1 data-translate-key="Delete Reply">Delete Reply</h1>

<h3 data-translate-key="Are you sure you want to delete this reply?">Are you sure you want to delete this reply?</h3>
<div>
    <h4 data-translate-key="Reply">Reply</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" data-translate-key="Content">Content</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2" data-translate-key="Posted by">Posted by</dt>
        <dd class="col-sm-10">
            @(Model.User?.UserName ?? "Anonymous")
        </dd>
        <dt class="col-sm-2" data-translate-key="Posted on">Posted on</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    <form asp-action="DeleteReply">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumPostId" data-translate-key="Back to Post">Back to Post</a>
    </form>
</div>

@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="aec-container aec-mt-2">
    <div class="aec-row aec-mb-4">
        <div class="aec-col-12">
            <div class="aec-card aec-bg-primary aec-text-white aec-shadow">
                <div class="aec-card-body">
                    <h1 class="aec-display-4">Welcome, @ViewBag.Farmer.Name</h1>
                    <p class="aec-lead">@ViewBag.Farmer.FarmName</p>
                </div>
            </div>
        </div>
    </div>

    <div class="aec-row aec-mb-4">
        <div class="aec-col-4">
            <div class="aec-card aec-shadow aec-h-100">
                <div class="aec-card-header aec-bg-success aec-text-white">
                    <h5 class="aec-mb-0">Products</h5>
                </div>
                <div class="aec-card-body">
                    <div class="aec-d-flex aec-justify-content-between aec-align-items-center">
                        <h2 class="aec-display-4">@ViewBag.ProductCount</h2>
                        <i class="bi bi-box-seam aec-fs-1"></i>
                    </div>
                    <p>Total products in your inventory</p>
                </div>
                <div class="aec-card-footer">
                    <a asp-controller="Product" asp-action="Index" class="aec-btn aec-btn-outline-success">View Products</a>
                </div>
            </div>
        </div>

        <div class="aec-col-4">
            <div class="aec-card aec-shadow aec-h-100">
                <div class="aec-card-header aec-bg-info aec-text-white">
                    <h5 class="aec-mb-0">Categories</h5>
                </div>
                <div class="aec-card-body">
                    <div class="aec-d-flex aec-justify-content-between aec-align-items-center">
                        <h2 class="aec-display-4">@(ViewBag.Categories?.Count ?? 0)</h2>
                        <i class="bi bi-tags aec-fs-1"></i>
                    </div>
                    <p>Different product categories</p>
                </div>
                <div class="aec-card-footer">
                    <a asp-controller="Product" asp-action="Create" class="aec-btn aec-btn-outline-info">Add New Product</a>
                </div>
            </div>
        </div>

        <div class="aec-col-4">
            <div class="aec-card aec-shadow aec-h-100">
                <div class="aec-card-header aec-bg-warning">
                    <h5 class="aec-mb-0">Profile</h5>
                </div>
                <div class="aec-card-body">
                    <ul class="aec-list-group aec-list-group-flush">
                        <li class="aec-list-group-item aec-d-flex aec-justify-content-between">
                            <span>Farm Name:</span>
                            <span class="aec-fw-bold">@ViewBag.Farmer.FarmName</span>
                        </li>
                        <li class="aec-list-group-item aec-d-flex aec-justify-content-between">
                            <span>Email:</span>
                            <span>@ViewBag.Farmer.Email</span>
                        </li>
                        <li class="aec-list-group-item aec-d-flex aec-justify-content-between">
                            <span>Phone:</span>
                            <span>@ViewBag.Farmer.PhoneNumber</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="aec-row">
        <div class="aec-col-12">
            <div class="aec-card aec-shadow">
                <div class="aec-card-header aec-bg-primary aec-text-white">
                    <h5 class="aec-mb-0">Quick Actions</h5>
                </div>
                <div class="aec-card-body">
                    <div class="aec-row aec-g-3">
                        <div class="aec-col-4">
                            <a asp-controller="Product" asp-action="Create" class="aec-btn aec-btn-outline-primary aec-w-100 aec-p-3">
                                <i class="bi bi-plus-circle aec-fs-4 aec-d-block aec-mb-2"></i>
                                Add New Product
                            </a>
                        </div>
                        <div class="aec-col-4">
                            <a asp-controller="Product" asp-action="Index" class="aec-btn aec-btn-outline-primary aec-w-100 aec-p-3">
                                <i class="bi bi-list-ul aec-fs-4 aec-d-block aec-mb-2"></i>
                                View My Products
                            </a>
                        </div>
                        <div class="aec-col-4">
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="aec-btn aec-btn-outline-primary aec-w-100 aec-p-3">
                                <i class="bi bi-person-circle aec-fs-4 aec-d-block aec-mb-2"></i>
                                Manage Account
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any dashboard-specific scripts here
    </script>
}

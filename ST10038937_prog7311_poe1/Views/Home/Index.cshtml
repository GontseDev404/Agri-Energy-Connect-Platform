@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["WelcomeTitle"];
}

<!-- Hero Section -->
<section class="aec-container aec-mt-2" aria-labelledby="hero-heading">
    <div class="aec-card aec-text-center">
        <div class="aec-card-body aec-p-5">
            <h1 id="hero-heading" class="aec-display-4 aec-fw-bold" data-translate-key="AgriEnergyConnect">@Localizer["AgriEnergyConnect"]</h1>
            <p class="aec-lead aec-my-4" data-translate-key="HeroLead">@Localizer["HeroLead"]</p>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <div class="aec-d-grid aec-gap-2 aec-d-sm-flex aec-justify-content-sm-center">
                    <a asp-area="Identity" asp-page="/Account/Register" class="aec-btn aec-btn-lg aec-mr-2" aria-label="@Localizer["RegisterForAccount"]" data-translate-key="GetStarted">@Localizer["GetStarted"]</a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="aec-btn aec-btn-secondary aec-btn-lg" aria-label="@Localizer["LoginToAccount"]" data-translate-key="Login">@Localizer["Login"]</a>
                </div>
            }
            else
            {
                <div class="aec-d-grid aec-gap-2 aec-d-sm-flex aec-justify-content-sm-center">
                    <a asp-controller="Product" asp-action="Index" class="aec-btn aec-btn-lg" aria-label="@Localizer["ViewProducts"]" data-translate-key="ViewProducts">@Localizer["ViewProducts"]</a>
                    @if (User.IsInRole("Employee"))
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="aec-btn aec-btn-secondary aec-btn-lg" aria-label="@Localizer["GoToDashboard"]" data-translate-key="GoToDashboard">@Localizer["GoToDashboard"]</a>
                    }
                </div>
            }
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="aec-container aec-mt-2" id="featured-services" aria-labelledby="features-heading">
    <h2 id="features-heading" class="aec-pb-2 aec-border-bottom aec-text-center aec-mb-5">@Localizer["OurCoreServices"]</h2>
    <div class="aec-row aec-g-4 aec-py-5">
        <div class="aec-col-4">
            <div class="aec-card aec-h-100 aec-p-4 aec-text-center aec-d-flex aec-flex-column">
                <div class="feature-icon-container aec-mb-3 aec-mx-auto">
                     <i class="bi bi-shop aec-fs-1 aec-text-primary" aria-hidden="true"></i>
                </div>
                <h3 class="aec-fs-2">@Localizer["ProductMarketplace"]</h3>
                <p data-translate-key="ProductMarketplaceDescription">@Localizer["ProductMarketplaceDescription"]</p>
                <a asp-controller="Product" asp-action="Index" class="aec-btn aec-btn-sm aec-btn-outline-primary aec-mt-auto" aria-label="@Localizer["BrowseProducts"]" data-translate-key="BrowseProducts">@Localizer["BrowseProducts"]</a>
            </div>
        </div>
        <div class="aec-col-4">
            <div class="aec-card aec-h-100 aec-p-4 aec-text-center aec-d-flex aec-flex-column">
                <div class="feature-icon-container aec-mb-3 aec-mx-auto">
                    <i class="bi bi-people-fill aec-fs-1 aec-text-primary" aria-hidden="true"></i>
                </div>
                <h3 class="aec-fs-2">@Localizer["CommunityHub"]</h3>
                <p data-translate-key="CommunityHubDescription">@Localizer["CommunityHubDescription"]</p>
                <a asp-controller="Forum" asp-action="Index" class="aec-btn aec-btn-sm aec-btn-outline-primary aec-mt-auto" aria-label="@Localizer["JoinDiscussion"]" data-translate-key="JoinDiscussion">@Localizer["JoinDiscussion"]</a>
            </div>
        </div>
        <div class="aec-col-4">
            <div class="aec-card aec-h-100 aec-p-4 aec-text-center aec-d-flex aec-flex-column">
                <div class="feature-icon-container aec-mb-3 aec-mx-auto">
                    <i class="bi bi-shield-check aec-fs-1 aec-text-primary" aria-hidden="true"></i>
                </div>
                <h3 class="aec-fs-2">@Localizer["SecureAudited"]</h3>
                <p data-translate-key="SecureAuditedDescription">@Localizer["SecureAuditedDescription"]</p>
                 @if (User.IsInRole("Employee"))
                {
                    <a asp-controller="AuditLogs" asp-action="Index" class="aec-btn aec-btn-sm aec-btn-outline-primary aec-mt-auto" aria-label="@Localizer["ViewAuditLogs"]" data-translate-key="ViewAuditLogs">@Localizer["ViewAuditLogs"]</a>
                }
            </div>
        </div>
    </div>
</section>

